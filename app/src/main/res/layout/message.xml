<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Page">

    <Button
        android:id="@+id/home_button"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:onClick="home"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Home"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp"
        android:onClick="search_ride"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Search"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_button" />

    <Button
        android:id="@+id/payment_button"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:onClick="payment"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Payment"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/message_button" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="5dp"
        android:onClick="message"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="Message"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleX="8"
        android:scaleY="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/header" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="J-Motor"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:onClick="account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <ScrollView
        android:id="@+id/message_scroll"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginTop="140dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/message_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="message1"
                android:text="User 1"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 2"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 3"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 4"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 5"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 6"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 7"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 8"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 9"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="20dp"
                android:text="User 10"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

            <Button
                android:id="@+id/message_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User 11"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:cornerRadius="0dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Messages"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>